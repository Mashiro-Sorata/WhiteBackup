//mysidebar controler style

.fixed_side{position:fixed; top:250px;width: 90px;height: 120px;}

	.mybtn{width: 100px;height: 120px; background:url('http://oty1v077k.bkt.clouddn.com/bukagirl.jpg') no-repeat center;background-size:cover;background-color:rgba(220,20,60,0);}

  .waitingwordtop{background-color:rgba(255,255,255,0.5);width:110px;height:30px;position:absolute;top:-30px;right:-110px;color:#9400D3;opacity:0;border-radius:8px;p{height:30px;display:block;text-align:center;line-hight:30px;margin-bottom:0px;}}
  .waitingwordbuttom{background-color:rgba(255,255,255,0.5);width:110px;height:30px;position:absolute;top:120px;right:-110px;color:#FF4500;opacity:0;border-radius:8px;p{height:30px;display:block;text-align:center;line-hight:30px;margin-bottom:0px;}}

