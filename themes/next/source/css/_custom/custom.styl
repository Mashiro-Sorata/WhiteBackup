// Custom styles.
body {
        background:url(http://oty1v077k.bkt.clouddn.com/body_girlasideflower.jpg);
        background-size:cover;
        background-repeat:no-repeat;
        background-attachment:fixed;
        background-position:center;
     }

//背景半透明的实现
.content {
            border-radius: 10px;
            margin-top: 60px;
            background:rgba(255,255,255,0.8) none repeat scroll !important;
         }
.header {
            //background: url('../image/head_bgp.jpg');
            background:rgba(0,0,0,0.7) none repeat scroll !important;
        }

#footer {
          background:rgba(0,0,0,0.5) none repeat scroll !important;
        }
#lv-container { border-radius: 10px; background:rgba(255,255,255,0.8) none repeat scroll !important;}

#header {}

